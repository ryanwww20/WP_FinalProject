# MongoDB
MONGODB_URI=mongodb_url

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000

# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nexauth-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# GitHub OAuth
GITHUB_ID=your-github-client-id-here
GITHUB_SECRET=your-github-client-secret-here

# Pusher Configuration
NEXT_PUBLIC_PUSHER_APP_ID=your_app_id
NEXT_PUBLIC_PUSHER_KEY=your_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_cluster

# Server-side only (never exposed to browser) - NO NEXT_PUBLIC_ prefix
PUSHER_SECRET=your_secret
